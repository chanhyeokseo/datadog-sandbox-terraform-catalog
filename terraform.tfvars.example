# ============================================
# Terraform Variables Example
# ============================================
# Copy this file to terraform.tfvars and update with your values
# cp terraform.tfvars.example terraform.tfvars

# External VPC Configuration
vpc_id            = "vpc-xxxxxxxxx"
public_subnet_id  = "subnet-xxxxxxxxx"
public_subnet2_id = "subnet-xxxxxxxxx"
private_subnet_id = "subnet-xxxxxxxxx"

# Required tagging policy
creator = "firstname.lastname"
team    = "technical-support-engineering"

# Personal project settings
project_name = "your-name"
project_env  = "test"

# EC2 configuration
# Replace with your AWS EC2 key pair name
ec2_key_name = "your-key-pair-name"

# Datadog configuration
datadog_api_key = "your-datadog-api-key-here"

# RDS configuration (uncomment when using RDS modules)
# rds_username       = "admin"
# rds_password       = "YourRDSPassword123"
# rds_instance_class = "db.t3.micro"

# DBM Auto-Config (uncomment when using dbm-autoconfig.tf)
# dbm_postgres_datadog_password = "YourDatadogDBMPassword123"
# ssh_private_key_path          = "./your-key.pem"